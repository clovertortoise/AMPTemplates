[
    {
        "ConfigFile": "config/configuration.toml",
        "ConfigFileTemplate": "pumpkin_configuration.tpl",
        "ConfigType": "template",
        "AutoMap": false
    },
    {
        "ConfigFile": "config/features.toml",
        "ConfigType": "ini",
        "ConfigFormat": "{0} = \"{1}\"",
        "ConfigFormatRegex": "^\\s*(?<key>.+?)\\s*=\\s*\"(?<value>.*?)\"$",
        "Subsections": [
            {
                "Heading": "networking.rcon",
                "SettingMappings": {
                    "address": "rcon_address",
                    "password": "rcon_password"
                }
            },
            {
                "Heading": "networking.proxy.velocity",
                "SettingMappings": {
                    "secret": "velocity_secret"
                }
            },
            {
                "Heading": "resource_pack",
                "SettingMappings": {
                    "url": "resource_pack_url",
                    "sha1": "resource_pack_sha1",
                    "prompt_message": "resource_pack_prompt_message"
                }
            },
            {
                "Heading": "chat",
                "SettingMappings": {
                    "format": "chat_format"
                }
            }
        ]
    },
    {
        "ConfigFile": "config/features.toml",
        "ConfigType": "ini",
        "ConfigFormat": "{0} = {1}",
        "ConfigFormatRegex": "^\\s*(?<key>.+?)\\s*=\\s*(?<value>[^\"]*?)$",
        "Subsections": [
            {
                "Heading": "commands",
                "SettingMappings": {
                    "use_console": "use_console",
                    "log_console": "log_console",
                    "default_op_level": "default_op_level"
                }
            },
            {
                "Heading": "pvp",
                "SettingMappings": {
                    "enabled": "pvp_enabled"
                }
            },
            {
                "Heading": "networking.rcon",
                "SettingMappings": {
                    "enabled": "rcon_enabled"
                }
            },
            {
                "Heading": "networking.proxy",
                "SettingMappings": {
                    "enabled": "proxy_enabled"
                }
            },
            {
                "Heading": "networking.proxy.velocity",
                "SettingMappings": {
                    "enabled": "velocity_enabled"
                }
            },
            {
                "Heading": "networking.proxy.bungeecord",
                "SettingMappings": {
                    "enabled": "bungeecord_enabled"
                }
            },
            {
                "Heading": "networking.authentication",
                "SettingMappings": {
                    "prevent_proxy_connections": "prevent_proxy_connections"
                }
            },
            {
                "Heading": "resource_pack",
                "SettingMappings": {
                    "enabled": "resource_pack_enabled",
                    "force": "resource_pack_force"
                }
            }
        ]
    }
]