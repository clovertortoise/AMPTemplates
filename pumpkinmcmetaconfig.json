[
  {
    "ConfigFile": "configuration.toml",
    "ConfigType": "Regex",
    "SetupAction": "ReadWrite",
    "Description": "Matches numeric values (Port, Max Players)",
    "ConfigFormatRegex": "(?m)^\\s*{0}\\s*=\\s*(?<value>[0-9]+)$"
  },
  {
    "ConfigFile": "configuration.toml",
    "ConfigType": "Regex",
    "SetupAction": "ReadWrite",
    "Description": "Matches boolean values (Online Mode)",
    "ConfigFormatRegex": "(?m)^\\s*{0}\\s*=\\s*(?<value>true|false)$"
  },
  {
    "ConfigFile": "configuration.toml",
    "ConfigType": "Regex",
    "SetupAction": "ReadWrite",
    "Description": "Matches quoted strings (MOTD)",
    "ConfigFormatRegex": "(?m)^\\s*{0}\\s*=\\s*\"(?<value>[^\"]*)\""
  }
]
